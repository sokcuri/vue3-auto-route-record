  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "baseUrl": ".",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

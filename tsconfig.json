{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
